source "https://rubygems.org"

## Let the github-pages plugin to select its preferred jekyll version
# gem "jekyll", "~> 4.2"
gem 'github-pages', group: :jekyll_plugins

## Missing dependency when rendering the page locally
gem "webrick", "~> 1.7"

## the page is rendered properly both locally and in github without it
## but it is cited in https://jekyllrb.com/docs/themes/
## as probably it is an hidden dependency of the github-pages gem
gem "jekyll-theme-minimal"

# https://github.com/jekyll/jemoji
gem "jemoji"